<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                   http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="chulpan" id="1">
        <createTable tableName="user_sight_wanted">
            <column autoIncrement="true" name="id" type="INT">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="sight_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
                constraintName="user_sight_wanted-uc1-user_id"
                tableName="user_sight_wanted"
                columnNames="user_id, sight_id"/>
        <addForeignKeyConstraint
                baseTableName="user_sight_wanted"
                baseColumnNames="user_id"
                constraintName="user_sight_wanted-fk1-user_id"
                referencedTableName="user"
                referencedColumnNames="id"/>
        <addForeignKeyConstraint
                baseTableName="user_sight_wanted"
                baseColumnNames="sight_id"
                constraintName="user_sight_wanted-fk2-sight_id"
                referencedTableName="sight"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>